@model IEnumerable<RM_Signaxes.Models.Machine>

@{
    ViewBag.Title = "Manage Machines";
}


<div class="row">
    <div class="col-md-6 col-sm-12">
        <h3 class="text-secondary">Machines <b>Management</b></h3>
    </div>
    <div class="col-md-6 col-sm-12">
        <p style="text-align:right">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary mt-1" })
        </p>
    </div>
</div>

<table class="table table-striped DataTable">
    <thead>
        <tr class="bg-secondary" style="color:white">

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                Added By
            </th>

            <th></th>
        </tr>
    </thead>
    @if (Model != null && Model.Count() > 0)
    {
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Make)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddedBy.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Create", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })

                        @Html.ActionLink("View Jobs", "Job", "OperatorJob", new { id = item.Id, type = "machine" }, new { @class = "btn btn-secondary btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    }
    else
    {
        <tr>
            <td colspan="8" style="text-align:center">No Data Found</td>
        </tr>
    }

</table>
