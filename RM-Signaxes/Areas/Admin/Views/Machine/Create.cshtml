@model RM_Signaxes.Models.Machine

@{
    ViewBag.Title = (Model == null ? "Create Job" : "Edit Job");
}

<div class="row">
    <div class="col-md-6 col-sm-12">
        <h3>@(Model==null? "Create" : "Edit") <b>Job</b></h3>
    </div>
    <div class="col-md-6 col-sm-12">
        <p style="text-align:right">
            @(Model != null ? Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary" }) : null)
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </p>
    </div>
</div>

<hr class="mt-0 mb-2 " />
