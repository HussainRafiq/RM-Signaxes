@model RM_Signaxes.Models.Actor


@{
    ViewBag.Title = Model == null ? "Create" : "Edit";
}




<div class="row">
    <div class="col-md-6 col-sm-12">
        <h3>@(Model==null? "Create" : "Edit") <b>Operator</b></h3>
    </div>
